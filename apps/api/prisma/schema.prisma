generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User & Authentication
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  passwordHash  String?
  emailVerified DateTime?
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  subscription Subscription?
  brand        Brand?
  searches     Search[]
  campaigns    Campaign[]
  bookings     Booking[]
  accounts     Account[]
  sessions     Session[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Brand Profile
model Brand {
  id             String   @id @default(cuid())
  userId         String   @unique
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name           String
  website        String?
  industry       String
  targetAudience Json?
  monthlyBudget  Decimal? @db.Decimal(10, 2)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Subscription & Payments
model Subscription {
  id                   String             @id @default(cuid())
  userId               String             @unique
  user                 User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  stripeCustomerId     String             @unique
  stripeSubscriptionId String?            @unique
  plan                 Plan               @default(STARTER)
  status               SubscriptionStatus @default(TRIALING)
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean            @default(false)
  searchesUsed         Int                @default(0)
  createdAt            DateTime           @default(now())
  updatedAt            DateTime           @updatedAt
}

enum Plan {
  STARTER
  GROWTH
  SCALE
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  PAST_DUE
  CANCELED
  TRIALING
  INCOMPLETE
}

// Ad Platforms
model AdPlatform {
  id            String        @id @default(cuid())
  name          String        @unique
  slug          String        @unique
  type          PlatformType
  website       String
  logoUrl       String?
  apiAvailable  Boolean       @default(false)
  lastScraped   DateTime?
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  opportunities AdOpportunity[]

  @@index([type])
  @@index([isActive])
}

enum PlatformType {
  SOCIAL_MEDIA
  SEARCH_ENGINE
  DISPLAY_NETWORK
  INFLUENCER
  PODCAST
  NEWSLETTER
  NATIVE_ADS
  VIDEO
  OTHER
}

// Ad Opportunities
model AdOpportunity {
  id             String       @id @default(cuid())
  platformId     String
  platform       AdPlatform   @relation(fields: [platformId], references: [id])

  // Core Info
  title          String
  description    String?      @db.Text
  adType         String
  placement      String?
  format         String?

  // Pricing
  pricingModel   PricingModel
  minBudget      Decimal?     @db.Decimal(10, 2)
  maxBudget      Decimal?     @db.Decimal(10, 2)
  cpmEstimate    Decimal?     @db.Decimal(10, 4)
  cpcEstimate    Decimal?     @db.Decimal(10, 4)

  // Audience & Reach
  estimatedReach Int?
  audienceData   Json?
  targetingOptions Json?

  // Performance Estimates
  avgCtr         Decimal?     @db.Decimal(5, 4)
  avgConversion  Decimal?     @db.Decimal(5, 4)
  qualityScore   Int?

  // Metadata
  sourceUrl      String?
  externalId     String?
  isActive       Boolean      @default(true)
  lastVerified   DateTime?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  // Relations
  searchResults  SearchResult[]
  bookings       Booking[]

  @@index([platformId])
  @@index([pricingModel])
  @@index([qualityScore])
  @@index([isActive])
  @@index([adType])
}

enum PricingModel {
  CPM
  CPC
  CPA
  FLAT_RATE
  AUCTION
  HYBRID
}

// User Searches
model Search {
  id             String       @id @default(cuid())
  userId         String
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  // Search Parameters
  budget         Decimal      @db.Decimal(10, 2)
  targetAudience Json?
  industries     String[]
  adTypes        String[]
  platforms      String[]
  goals          String[]

  // Results
  status         SearchStatus @default(PENDING)
  resultCount    Int          @default(0)
  results        SearchResult[]

  createdAt      DateTime     @default(now())
  completedAt    DateTime?

  @@index([userId])
  @@index([status])
  @@index([createdAt])
}

enum SearchStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}

model SearchResult {
  id                String        @id @default(cuid())
  searchId          String
  search            Search        @relation(fields: [searchId], references: [id], onDelete: Cascade)
  opportunityId     String
  opportunity       AdOpportunity @relation(fields: [opportunityId], references: [id])

  // AI Recommendations
  matchScore        Int
  recommendedBudget Decimal?      @db.Decimal(10, 2)
  expectedReach     Int?
  expectedCtr       Decimal?      @db.Decimal(5, 4)
  expectedRoi       Decimal?      @db.Decimal(5, 2)
  reasoning         String?       @db.Text

  rank              Int

  @@index([searchId])
  @@index([opportunityId])
  @@index([matchScore])
}

// Campaigns
model Campaign {
  id          String         @id @default(cuid())
  userId      String
  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  description String?
  budget      Decimal        @db.Decimal(10, 2)
  startDate   DateTime?
  endDate     DateTime?
  status      CampaignStatus @default(DRAFT)
  bookings    Booking[]
  analytics   CampaignAnalytics[]
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  @@index([userId])
  @@index([status])
}

enum CampaignStatus {
  DRAFT
  PENDING
  ACTIVE
  PAUSED
  COMPLETED
  CANCELLED
}

// Bookings
model Booking {
  id                String        @id @default(cuid())
  userId            String
  user              User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  campaignId        String?
  campaign          Campaign?     @relation(fields: [campaignId], references: [id])
  opportunityId     String
  opportunity       AdOpportunity @relation(fields: [opportunityId], references: [id])

  // Booking Details
  budget            Decimal       @db.Decimal(10, 2)
  startDate         DateTime
  endDate           DateTime
  status            BookingStatus @default(PENDING)

  // Payment
  stripePaymentId   String?
  commissionRate    Decimal       @default(0.05) @db.Decimal(4, 4)
  commissionAmount  Decimal?      @db.Decimal(10, 2)
  totalAmount       Decimal?      @db.Decimal(10, 2)

  // External Tracking
  externalBookingId String?
  trackingUrl       String?
  notes             String?       @db.Text

  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  @@index([userId])
  @@index([campaignId])
  @@index([status])
}

enum BookingStatus {
  PENDING
  PAYMENT_REQUIRED
  CONFIRMED
  ACTIVE
  COMPLETED
  CANCELLED
  REFUNDED
}

// Analytics
model CampaignAnalytics {
  id           String   @id @default(cuid())
  campaignId   String
  campaign     Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  date         DateTime @db.Date

  // Metrics
  impressions  Int      @default(0)
  clicks       Int      @default(0)
  conversions  Int      @default(0)
  spend        Decimal  @default(0) @db.Decimal(10, 2)
  revenue      Decimal  @default(0) @db.Decimal(10, 2)

  // Calculated (stored for performance)
  ctr          Decimal? @db.Decimal(5, 4)
  cpc          Decimal? @db.Decimal(10, 4)
  cpa          Decimal? @db.Decimal(10, 2)
  roas         Decimal? @db.Decimal(5, 2)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@unique([campaignId, date])
  @@index([campaignId])
  @@index([date])
}

// Scraping Jobs
model ScrapingJob {
  id          String          @id @default(cuid())
  platformId  String?
  status      ScrapingStatus  @default(PENDING)
  startedAt   DateTime?
  completedAt DateTime?
  itemsFound  Int             @default(0)
  itemsAdded  Int             @default(0)
  itemsUpdated Int            @default(0)
  error       String?         @db.Text
  logs        Json?
  createdAt   DateTime        @default(now())

  @@index([status])
  @@index([createdAt])
}

enum ScrapingStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}
